{shell, [
  {apps, [erlang_socks5]},
  {config, "config/erlang_socks5.config"}
]}.
{deps, [
  {sqlite3, {git, "https://github.com/alexeyr/erlang-sqlite3.git", {branch, "master"}}}
]}.

{profiles, [
  {default,
    [
      {erl_opts,
        [
          debug_info,
          warn_missing_spec,
          warning_as_errors
      ]}
    ]
  },
  {test,
    [
      {deps, [
        {gun, {git, "https://github.com/ninenines/gun.git", {tag, "1.0.0-pre.5"}}}
      ]},
      {ct_opts, [{sys_config, ["config/erlang_socks5_test.config"]}]}
    ]
  },
  {travis,
    [
      {deps, [
        {gun, {git, "https://github.com/ninenines/gun.git", {tag, "1.0.0-pre.5"}}}
      ]},
      {ct_opts, [{sys_config, ["config/erlang_socks5_travis.config"]}]}
    ]
  }]
}.