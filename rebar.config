{shell, [
  {apps, [socks5]},
  {config, "config/erlang_socks5.config"}
]}.
{deps, [
  {sqlite3, {git, "https://github.com/alexeyr/erlang-sqlite3.git", {branch, "master"}}}
]}.

{profiles, [
  {default,
    [
      {erl_opts,
        [
          debug_info,
          warn_missing_spec,
          warning_as_errors
      ]}
    ]
  },
  {test,
    [
      {deps, [
        meck
      ]},
      {ct_opts, [{logopts, [no_src]}, {sys_config, ["config/erlang_socks5_test.config"]}]}
    ]
  }]
}.

{relx, [{release, {socks5, "0.1.0"},
  [socks5]},

  {dev_mode, false},
  {include_erts, false},

  {sys_config, "config/erlang_socks5_prod.config"},

  {extended_start_script, true}]}.